<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/kkk_area_pickerview_topbar_paddingleft"
        android:paddingRight="@dimen/kkk_area_pickerview_topbar_paddingright"
        android:text="取消"
        android:textColor="@color/kkk_gonelue_nav"
        android:textSize="@dimen/kkk_area_pickerview_topbar_btn_textsize" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSubmit"
        android:layout_toRightOf="@+id/btnCancel"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/kkk_area_pickerview_topbar_title_textsize" />

    <Button
        android:id="@id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/kkk_area_pickerview_topbar_paddingright"
        android:paddingRight="@dimen/kkk_area_pickerview_topbar_paddingleft"
        android:text="确定"
        android:textColor="@color/kkk_gonelue_nav"
        android:textSize="@dimen/kkk_area_pickerview_topbar_btn_textsize" />

</RelativeLayout>