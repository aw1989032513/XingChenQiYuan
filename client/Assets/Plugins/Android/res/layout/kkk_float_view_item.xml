<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kkk_float_view_item_layout"
    android:layout_width="30dip"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/kkk_float_view_item_dot"
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:layout_gravity="right"
        android:src="@drawable/kkk_dot_red"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/kkk_float_view_item_img"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/kkk_float_view_item_title"
        android:layout_width="30dip"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:text="攻略"
        android:textColor="@drawable/kkk_text_color_4_selector"
        android:textSize="12sp" />

</LinearLayout>