<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kkk_base_selector"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/kkk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:text="这里是标题这里是标题"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/kkk_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkk_title"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text=""
        android:textColor="#858585"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/kkk_ll_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkk_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/kkk_images_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="0dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/kkk_images_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/kkk_images_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/kkk_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkk_ll_images"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/kkk_user_avart"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/kkk_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/kkk_user_avart"
            android:gravity="center"
            android:text="用户名"
            android:textColor="#b2b2b2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/kkk_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/kkk_user_name"
            android:gravity="center"
            android:text="时间"
            android:textColor="#b2b2b2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/kkk_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="1563"
            android:textColor="#b2b2b2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/kkk_iv_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/kkk_reader"
            android:src="@drawable/kkk_gonglue_eyes" />
    </RelativeLayout>

</RelativeLayout>