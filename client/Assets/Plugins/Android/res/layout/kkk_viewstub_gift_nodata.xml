<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/kkk_hint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="微信搜索关注&apos;3K游戏&apos;的服务号"
        android:textColor="#B2B2B2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/kkk_hint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kkk_hint1"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="礼包上架相关信息早知道"
        android:textColor="#B2B2B2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/kkk_hint3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/kkk_hint1"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="该游戏暂无礼包"
        android:textColor="#B2B2B2"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/kkk_hint3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/kkk_nodata_cat" />

</RelativeLayout>