<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView
            android:id="@+id/kkk_commonsdk_iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kkk_commonsdk_dialog_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/kkk_commonsdk_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kkk_commonsdk_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="标题"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/kkk_commonsdk_sv"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/kkk_commonsdk_tv_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kkk_commonsdk_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="内容"
                    android:textColor="#696969"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/kkk_commonsdk_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/kkk_commonsdk_tv_content"
                    android:layout_marginTop="10dp"
                    android:background="#CCCCCC" />


            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/kkk_commonsdk_tv_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kkk_commonsdk_sv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:padding="14dp"
            android:text="事件"
            android:textColor="#FD9027"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/kkk_commonsdk_ll_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kkk_commonsdk_sv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/kkk_commonsdk_tv_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="暂不"
                android:textColor="#696969"
                android:textSize="15sp" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="#CCCCCC" />

            <TextView
                android:id="@+id/kkk_commonsdk_tv_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="16dp"
                android:text="确定"
                android:textColor="#FD9027"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>